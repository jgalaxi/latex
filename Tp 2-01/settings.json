{
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex with copy",
      "tools": ["pdflatex", "copy-pdf"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "copy-pdf",
      "command": "cp",
      "args": ["%DOCFILE%.pdf", "shared-pdf/%DOCFILE%.pdf"]
    }
  ],
  "latex-workshop.latex.autoBuild.run": "onSave",

  // Rewrap configuration
  "rewrap.wrappingColumn": 80,
  "rewrap.autoWrap.enabled": false,
  "[latex]": {
    "editor.wordWrap": "on",
    "editor.rulers": [80]
  }
}
